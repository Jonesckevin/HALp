# Environment Variables for WebApp Conversion Framework
# Copy to .env and customize for your deployment

# Application Environment
ENVIRONMENT=production
DEBUG=false
BUILD_ENV=production

# Build metadata (set by CI/CD)
BUILD_DATE=
VCS_REF=

# Port Configuration
BACKEND_PORT=8000
FRONTEND_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Security
SECRET_KEY=change-this-super-secret-key-in-production
ALLOWED_ORIGINS=http://localhost,http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration
POSTGRES_DB=webapp
POSTGRES_USER=webapp_user
POSTGRES_PASSWORD=change-this-database-password

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=/app/uploads
DOWNLOAD_DIR=/app/downloads

# BITS Integration (Windows)
BITS_ENDPOINT=http://localhost:8080/bits
BITS_TIMEOUT=300

# SMB Configuration
SMB_TIMEOUT=30
SMB_MOUNT_BASE=/app/mounts

# Monitoring
GRAFANA_PASSWORD=admin

# SSL/TLS (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Performance Tuning
MAX_WORKERS=4
KEEPALIVE_TIMEOUT=5

# Background Tasks
CELERY_BROKER_URL=redis://webapp-redis:6379
CELERY_RESULT_BACKEND=redis://webapp-redis:6379